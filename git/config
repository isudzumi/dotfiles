[core]
	editor=vi
	excludesfile=~/.gitignore

[user]
	name = Hiroaki ITO
	email = mail@isudzumi.com

[alias]
	st = status
	cm = commit
	graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	cancel = reset --soft HEAD^
	b = branch
	co = checkout
	com = checkout master
	plr = pull --rebase
	fp = !git fetch -p && git branch --merged | grep -v \\* | xargs -I % git branch -d %
	back = reset --hard HEAD
	last = log -n 1
	recent = log -n 5 --oneline
	vup = !git checkout master && npm version patch && git push origin master --follow-tags
	difl = diff HEAD~
	rmb = branch -D
	s = switch
	sc = switch -c
	pf = push --force-with-lease
	fcm = commit --fixup HEAD
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[push]
	default = simple
[pull]
	rebase = true
[fetch]
	prune = true
[rebase]
	autoSquash = true
[commit]
	gpgSign = true
[init]
	defaultBranch = main
